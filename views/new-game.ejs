<main>
    <form action="/games" method="post">
        <h1>New Game</h1>

        <% if(error) { %>
            <div class="form-error">
                <%= error %>
            </div>
        <% } %>

        <div>
            <label for="name">Name</label>
            <input type="text" id="name" name="name" required />
        </div>
        <input type="submit" value="Continue" />
</main>